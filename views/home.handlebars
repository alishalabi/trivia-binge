<!-- Header Section -->
<div class="header">
  <div class="header-title">
    <h1>Trivia Trainer</h1>
    <h2>Give Your Brain A Workout</h2>
  </div>
</div>

<!-- Trivia Section -->
<div class="trivia">
  <!-- <h3>Prompt:</h3> -->
  <div class="trivia-section">
    <div class="question-card">
      <div class="trivia-category">
        <p>Category: {{category}}</p>
      </div>
      <div class="trivia-question">
        <p>Q: <span id="question">{{question}}</span></p>
        <button id="speak" onclick="pronounce()"><img src="https://img.icons8.com/metro/1600/speaker.png" style="width:20px;height:20px;" /></button>
      </div>
    </div>

    <div id="answer" class="trivia-answer">
      <div class="trivia-answer-inner">
        <div class="trivia-answer-front">
          <p>Hover For Answer</p>
        </div>
        <div class="trivia-answer-back">
          <p>A: {{answer}}</p>
          <div class="fyi-card">
            <p>Did You Know?</p>
            <p>{{fyiDecript}}</p>
            <!-- <p>
              Would you like to know more? - <a target="_blank" href={{fyiLink}}>{{fyiLink}}</a>
            </p> -->
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

